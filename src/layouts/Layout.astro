---
import '../styles/global.css';

interface Props {
  title?: string;
}

const { title = 'Gallery of Classical Echoes' } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <meta
      name="description"
      content="A single-page virtual gallery presenting a curated collection of artworks in a classical, museum-inspired exhibition."
    />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Source+Sans+3:wght@300;400;500;600&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="gallery-body">
    <slot />
  </body>
</html>
